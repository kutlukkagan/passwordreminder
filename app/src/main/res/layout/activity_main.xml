<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ✅ Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@android:color/white"
        android:title="Kayıtlar" />

    <!-- ✅ Arama (Material) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ara (başlık / kullanıcı adı)"
        android:layout_margin="12dp"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="?attr/colorPrimary"
        app:endIconMode="clear_text"
        app:endIconTint="?attr/colorPrimary">



        <!-- ✅ ID aynı kaldı: MainActivity.java değişmeden çalışır -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- ✅ Boş durum container: ikon + mesaj -->
    <LinearLayout
        android:id="@+id/emptyContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <!-- ✅ İkon -->
        <ImageView
            android:id="@+id/ivEmpty"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="empty icon"
            android:alpha="0.85"
            android:src="@android:drawable/ic_lock_idle_lock" />

        <!-- ✅ Mesaj -->
        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="Henüz kayıt yok"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>



    <!-- ✅ Liste -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCredentials"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

    <!-- ✅ Yeni kayıt -->
    <Button
        android:id="@+id/btnNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yeni Kayıt" />

</LinearLayout>
